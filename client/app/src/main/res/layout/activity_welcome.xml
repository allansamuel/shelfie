<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.WelcomeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider10dp"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_welcome_shelfie_logo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            app:srcCompat="@drawable/logo_shelfie" />

        <ImageView
            android:id="@+id/img_welcome_shelfie_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:srcCompat="@drawable/shelfie_logo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>