<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_search_book"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:gravity="top">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_search_book"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/search_black_24dp"
                android:hint="@string/search" />
        </com.google.android.material.textfield.TextInputLayout>

        <ScrollView
            android:id="@+id/sv_search_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexbox_search_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:paddingTop="16dp"
                android:paddingEnd="32dp"
                android:paddingBottom="32dp"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexWrap="wrap"
                app:justifyContent="space_between">

            </com.google.android.flexbox.FlexboxLayout>

        </ScrollView>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexbox_search_empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="32dp"
            android:paddingTop="16dp"
            android:paddingEnd="32dp"
            android:paddingBottom="32dp"
            app:alignContent="flex_start"
            app:alignItems="center"
            app:flexWrap="wrap"
            app:justifyContent="space_between">

            <TextView
                android:id="@+id/tv_search_empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procure por seus livros favoritos"
                android:textAlignment="center"
                app:drawableBottomCompat="@drawable/search_empty_state" />

        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>