<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    app:alignItems="center"
    app:justifyContent="space_between"
    app:layout_minWidth="100dp"
    tools:context=".ui.fragments.ChildCoinsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_logged_child_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/img_logged_child_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_400" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_logged_child_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:minWidth="80dp"
        app:cardCornerRadius="25dp">

        <TextView
            android:id="@+id/tv_logged_child_coins"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:textColor="@color/green_400"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/child_profile_coin"
            tools:text="0" />

    </androidx.cardview.widget.CardView>

</com.google.android.flexbox.FlexboxLayout>